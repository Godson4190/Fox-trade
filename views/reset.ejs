<%- include ("./partials/header") %>
<div class="intro">
    <h3>Password Reset</h3>
    <div class="intro-ul">
        <ul>
            <li><a class="button-complete href="><i class="fab fa-facebook-f"></i></a></li>
            <li><a class="button-complete href="><i class="fab fa-twitter"></i></a></li>
            <li><a class="button-complete href="><i class="fab fa-instagram"></i></a></li>
            <li><a class="button-complete href="><i class="fab fa-linkedin"></i></a></li>
            <li><a class="button-complete href="><i class="fab fa-whatsapp"></i></a></li>
        </ul>
    </div>
</div>
</div>
</header>
<div>
    <div class="container">
        <div class="form-bg">
            <div class="form-main">
                <div class="form-content">
                    <form action="/reset/<%= token %>" method="POST">
                        <legend>Reset Password</legend>
                        <div class="form-control">
                            <label for="password">Email</label>
                            <input type="password" name="password" autofocus="autofocus" required>
                        </div>
                        <div class="form-control">
                            <label for="confirm">Email</label>
                            <input type="email" name="confirm" autofocus="autofocus" required>
                        </div>
                        <button type="submit" class="button-main button-form"><i class="fas fa-paper-plane"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
<%- include ("./partials/footer") %>